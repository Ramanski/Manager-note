<Window x:Class="Mannote.OperationsInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mannote"
        mc:Ignorable="d"
        Title="Справка по операциям с поездом №" Width="300"
        x:Name="wOper" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="Height">
    <StackPanel Margin="10">
        <TextBox x:Name="tbOperations" Margin="10" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <Button x:Name="OK" Content="OK" MaxWidth="100" Click="OK_Click"/>
    </StackPanel>
</Window>
