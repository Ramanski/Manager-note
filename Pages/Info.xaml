<Page x:Class="Mannote.Info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mannote"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Info" Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Info Page" Grid.Row="0" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFF90505"/>
        <DataGrid AutoGenerateColumns="False" x:Name="uchGrid" Grid.Row="1" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding KUU}" Header="№ участка ДГП" Width= "125"/>
                <DataGridTextColumn Binding="{Binding NAIMK}" Header="Наименование участка" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
