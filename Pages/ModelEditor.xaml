<Page x:Class="Mannote.Pages.ModelEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mannote.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="ModelEditor">

    <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="429" Margin="10,7,0,0" Stroke="Black" VerticalAlignment="Top" Width="271"/>
        <Label x:Name="lProcessing" Content="Формирование поезда" HorizontalAlignment="Left" Margin="64,11,0,0" VerticalAlignment="Top" Width="138"/>
        <ComboBox x:Name="cbDepartureStation" HorizontalAlignment="Left" Margin="119,41,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lDeparture" Content="Отправление" HorizontalAlignment="Left" Margin="21,37,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbArrivalStation" HorizontalAlignment="Left" Margin="119,70,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lArrival" Content="Прибытие" HorizontalAlignment="Left" Margin="21,66,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="Тип поезда" Margin="21,97,460,298">
            <StackPanel>
                <RadioButton x:Name="rbCargoType" GroupName="TrainType" Content="Грузовой" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" IsChecked="True"/>
                <RadioButton x:Name="rbPassType" GroupName="TrainType" Content="Пассажирский" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Локомотив" HorizontalAlignment="Left" Margin="21,157,0,245" Width="245">
            <Grid>
                <ComboBox x:Name="cbLocomotive" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Width="223" Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <Label x:Name="lCargo" Content="Наименование груза" HorizontalAlignment="Left" Margin="23,205,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbCargoName" HorizontalAlignment="Left" Height="23" Margin="23,231,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="161"/>
        <Label x:Name="lTafiff" Content="Тариф" HorizontalAlignment="Left" Margin="202,205,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbTariff" HorizontalAlignment="Left" Height="23" Margin="202,231,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="64"/>
        <ListBox x:Name="lbCargo" HorizontalAlignment="Left" Height="102" Margin="23,284,0,0" VerticalAlignment="Top" Width="243"/>
        <Button x:Name="bAddCargo" Content="Добавить" HorizontalAlignment="Left" Margin="110,259,0,0" VerticalAlignment="Top" Width="74"/>
        <Button x:Name="bProcess" Content="Сформировать" HorizontalAlignment="Center" Margin="95,391,410,0" VerticalAlignment="Top" Width="95" Height="35"/>
        <GroupBox Header="Тип тяги" Margin="153,97,328,298">
            <StackPanel>
                <RadioButton x:Name="rbElectro" GroupName="PowerType" Content="Электровозная" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" IsChecked="True"/>
                <RadioButton x:Name="rbFuel" GroupName="PowerType" Content="Тепловозная" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
